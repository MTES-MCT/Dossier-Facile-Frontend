root /app/dist;

location / {
    index index.html;
    # Manage route with vue
    try_files $uri $uri/index.html /index.html =404;
    # Add security header
    add_header Content-Security-Policy "<%= ENV['MAIN_CSP'] %>";
    add_header X-Frame-Options "deny";
    add_header X-Content-Type-Options "nosniff";
}
